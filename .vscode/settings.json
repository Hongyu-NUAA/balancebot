{
    "cSpell.language": "en-GB",
    "astyle.astylerc": "${workspaceFolder}/Tools/CodeStyle/astylerc",

    "C_Cpp.formatting": "Default",
    // 不包含的文件夹
    "files.exclude": {
        "AntennaTracker/": true,
        "ArduCopter/": false,  // 如果使用的是多旋翼固件，则将此文件夹的隐藏设置为"false" 
        "Rover/": false,
        "Blimp/": true,
        "ArduPlane/": false,
        "ArduSub/": true,
        "build/": false,
        "docs/": true,
        "logs/": true,
        "mk/": true,
        "terrain/": true,
        "tests/": true
    },
    // APM固件代码风格，基于Google规范，但是tab是4个空格
    "C_Cpp.clang_format_fallbackStyle": "{BasedOnStyle: Google, IndentWidth: 4 }",
    // 粘贴时自动格式化
    "editor.formatOnPaste": false,
    "files.associations": {
        "*.px4board": "makefile",
        "*.toml": "makefile",
        "Kconfig": "makefile",
        "*.map": "arm",
        "*.dat": "cmake",
        ".config": "cmake",
        "*.inc": "cmake",
        "*.sdf": "xml",
        "*.world": "xml",
        "*.parm": "cmake",
        "array": "cpp",
        "string": "cpp",
        "string_view": "cpp",
        "functional": "cpp",
        "*.tcc": "cpp",
        "chrono": "cpp"
    },
    "editor.defaultFormatter": "xaver.clang-format",
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },

    "clang-format.executable": "/home/apm/.vscode/extensions/ms-vscode.cpptools-1.16.3-linux-x64/LLVM/bin/clang-format",
    "[cpp]": {
        "editor.defaultFormatter": "xaver.clang-format"
    }

}
